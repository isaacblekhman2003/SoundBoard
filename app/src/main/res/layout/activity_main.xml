<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoundboardActivity">

    <Button
        android:id="@+id/button_main_myswomp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShrekSwomp"
        app:layout_constraintBottom_toTopOf="@+id/button_main_darude"
        app:layout_constraintEnd_toStartOf="@+id/button_main_darude"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toEndOf="@+id/button_main_bruh"
        app:layout_constraintTop_toBottomOf="@+id/button_main_bruh" />

    <Button
        android:id="@+id/button_main_bruh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:text="BRUH"
        app:layout_constraintBottom_toTopOf="@+id/button_main_myswomp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_darude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="SurrenderStorm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_myswomp" />
</androidx.constraintlayout.widget.ConstraintLayout>